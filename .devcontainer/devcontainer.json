{
    "name": "devcontainer-python-template",
    "build": {
        "context": ".",
        "dockerfile": "Dockerfile"
    },
    // Forward FastAPI and Streamlit ports
    "forwardPorts": [
        8000,
        8501
    ],
    // Optional: enable GPU if available (requires Docker with NVIDIA runtime)
    "runArgs": [
        "--gpus=all"
    ],
    "postCreateCommand": "scripts/setup.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "tamasfe.even-better-toml",
                "christian-kohler.path-intellisense",
                "ms-python.vscode-pylance",
                "ms-python.python",
                "ms-python.debugpy",
                "charliermarsh.ruff",
                "redhat.vscode-yaml",
                "hverlin.mise-vscode"
            ]
        }
    }
}
